<h1><%= title(@event.title) %></h1> 

<div class="event_date">
	<%= l(@event.date_start, {:format => :long}) %>
	<% if @event.date_end && (@event.date_end != @event.date_start) %>
		- <%= l(@event.date_end, {:format => :long}) %>
	<% end %>
</div>

<% if @event.image? %>
	<%= image_tag(@event.image.show, {:alt => @event.image_alt, :title => @event.image_alt, :class => "image_left"}) %>
<% end %>

<p><strong><%= @event.venue %></strong></p>

<%= raw(@event.content) %>

<strong>Price:</strong> <%= @event.proper_price %>

<p align="right"><%= link_to "See all events", events_path %></p>
